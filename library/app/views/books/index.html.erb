<p id="notice"><%= notice %></p>
<section class="py-1 text-center container">
  <h1>List of Books</h1>
  <div class="container-fluid">
  <div class="collapse navbar-collapse" id="navbarCollapse">
    <div class="d-flex">
      <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to current_user.email, current_user, class: 'nav-link active' %>
        </li>
        <li class="nav-item">
          <%= link_to "Salir", destroy_user_session_path, method: 'delete', class: 'nav-link active' %>
        </li>
        <% else %>
          <%= link_to "Iniciar SesiÃ³n", new_user_session_path, class: 'nav-link active' %>
        <% end %>
      </ul>
    </div>
  </div>
  </div>
</section>
<table class="table table-hover table-sm">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.category %></td>
        <td><%= book.year %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<section class="py-1 text-center container">
  <div class="container">
    <%= link_to 'New Book', new_book_path %>
  </div>
</section>